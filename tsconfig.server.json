{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": "src",
    "allowJs": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "resolveJsonModule": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/server/**/*", "src/lib/**/*"],
  "exclude": ["src/**/*.test.*", "src/**/*.spec.*"]
}